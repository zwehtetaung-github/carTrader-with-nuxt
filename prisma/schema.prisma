generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Car {
    id              Int @id @default(autoincrement())
    image           String
    name            String
    numberOfSeats   Int
    miles           Int
    price           Int
    features        String[]
    description     String
    listerId        String
    city            String
    model           String
    make            String
    messages        Message[]
}

model Message {
    id          Int @id @default(autoincrement())
    email       String
    phone       String
    message     String
    listingId   Int
    listing     Car @relation(fiels: [listingId], references: [listingId])
}